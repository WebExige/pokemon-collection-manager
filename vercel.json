{
  "version": 2,
  "name": "pokemon-collection-manager",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/pokemon/(.*)",
      "dest": "/api/pokemon/[...path].js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/pokemon/[...path].js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/pokemon/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Api-Key"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}